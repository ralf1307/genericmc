#include "BuildConfig.h"
#include <QObject>

const Config BuildConfig;

Config::Config()
{
    // Version information
    VERSION_MAJOR = @GENERICMC_VERSION_MAJOR@;
    VERSION_MINOR = @GENERICMC_VERSION_MINOR@;
    VERSION_HOTFIX = @GENERICMC_VERSION_HOTFIX@;
    VERSION_BUILD = @GENERICMC_VERSION_BUILD@;

    BUILD_PLATFORM = "@GENERICMC_BUILD_PLATFORM@";
    UPDATER_BASE = "@GENERICMC_UPDATER_BASE@";
    ANALYTICS_ID = "@GENERICMC_ANALYTICS_ID@";
    NOTIFICATION_URL = "@GENERICMC_NOTIFICATION_URL@";
    FULL_VERSION_STR = "@GENERICMC_VERSION_MAJOR@.@GENERICMC_VERSION_MINOR@.@GENERICMC_VERSION_BUILD@";

    GIT_COMMIT = "@GENERICMC_GIT_COMMIT@";
    GIT_REFSPEC = "@GENERICMC_GIT_REFSPEC@";
    if(GIT_REFSPEC.startsWith("refs/heads/") && !UPDATER_BASE.isEmpty() && !BUILD_PLATFORM.isEmpty() && VERSION_BUILD >= 0)
    {
        VERSION_CHANNEL = GIT_REFSPEC;
        VERSION_CHANNEL.remove("refs/heads/");
        UPDATER_ENABLED = true;
    }
    else
    {
        VERSION_CHANNEL = QObject::tr("custom");
    }

    VERSION_STR = "@GENERICMC_VERSION_STRING@";
    NEWS_RSS_URL = "@GENERICMC_NEWS_RSS_URL@";
    PASTE_EE_KEY = "@GENERICMC_PASTE_EE_API_KEY@";
    IMGUR_CLIENT_ID = "@GENERICMC_IMGUR_CLIENT_ID@";
    META_URL = "@GENERICMC_META_URL@";

    BUG_TRACKER_URL = "@GENERICMC_BUG_TRACKER_URL@";
    DISCORD_URL = "@GENERICMC_DISCORD_URL@";
    SUBREDDIT_URL = "@GENERICMC_SUBREDDIT_URL@";
}

QString Config::printableVersionString() const
{
    QString vstr = QString("%1.%2.%3").arg(QString::number(VERSION_MAJOR), QString::number(VERSION_MINOR), QString::number(VERSION_HOTFIX));

    // If the build is not a main release, append the channel
    if(VERSION_CHANNEL != "stable")
    {
        vstr += "-" + VERSION_CHANNEL;
    }

    // if a build number is set, also add it to the end
    if(VERSION_BUILD >= 0)
    {
        vstr += "-" + QString::number(VERSION_BUILD);
    }
    return vstr;
}
